<div class="card">
  <div class="card-header">
    <h5 class="card-title">Contacts List</h5>
  </div>

  <div class="list-group list-group-flush">
    {{#if contacts}}
    {{#each contacts}}
    <a href="/contacts/{{ this._id }}" class="list-group-item list-group-item-action">
      {{ this.name }}
    </a>
    {{/each}}
    {{else}}
    <div class="list-group-item">No contacts</div>
    {{/if}}
  </div>
</div>